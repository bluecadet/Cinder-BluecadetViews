<?xml version="1.0" encoding="UTF-8" ?>
<cinder>
<block
	name="BluecadetViews"
	id="com.bluecadet.cinder.views"
	git="git@github.com:bluecadet/Cinder-BluecadetViews.git"
	author="Bluecadet"
	summary="Scene graph with nested transforms, events, touch/mouse delegation and app boilerplates."
	license="MIT"
	version="1.3.0"
	url="https://github.com/bluecadet/Cinder-BluecadetViews"
	>

	<requires>org.libcinder.tuio</requires>
	<requires>com.bluecadet.cinder.text</requires>

	<headerPattern>src/*.h</headerPattern>
	<sourcePattern>src/*.cpp</sourcePattern>
	
	<headerPattern>src/core/*.h</headerPattern>
	<sourcePattern>src/core/*.cpp</sourcePattern>
	<headerPattern>src/views/*.h</headerPattern>
	<sourcePattern>src/views/*.cpp</sourcePattern>
	<headerPattern>src/touch/*.h</headerPattern>
	<sourcePattern>src/touch/*.cpp</sourcePattern>
	<headerPattern>src/touch/drivers/*.h</headerPattern>
	<sourcePattern>src/touch/drivers/*.cpp</sourcePattern>
	
	<includePath>src</includePath>
</block>
</cinder>
